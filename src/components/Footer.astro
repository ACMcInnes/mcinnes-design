---
import ThemeToggle from '../components/ThemeToggle.astro';
import {
  faYoutube,
  faInstagram,
  faLinkedinIn,
  faGithub,
  faMastodon,
  faBluesky,
} from "@fortawesome/free-brands-svg-icons";
import Icon from "../components/Icon.astro";

const links = [
  {
    url: '/projects',
    text: 'Projects',
  },
  {
    url: '/about',
    text: 'About',
  },
  {
    url: '/contact',
    text: 'Contact',
  },
  {
    url: "/blog",
    text: "Blog",
  },
];

const socials = [
  {
    name: "Youtube",
    url: "#",
    icon: faYoutube,
  },
  {
    name: "Instagram",
    url: "#",
    icon: faInstagram,
  },
  {
    name: "LinkedIn",
    url: "#",
    icon: faLinkedinIn,
  },
  {
    name: "Github",
    url: "#",
    icon: faGithub,
  },
  {
    name: "Mastodon",
    url: "#",
    icon: faMastodon,
  },
  {
    name: "Bluesku",
    url: "#",
    icon: faBluesky,
  },
];

const copyrightYear = new Date().getFullYear();
---

<footer>
  <div class="mx-auto max-w-7xl overflow-hidden px-6 py-20 sm:py-24 lg:px-8 border-t border-gray-200 dark:border-gray-700">
    <nav
      class="-mb-6 flex flex-wrap justify-center gap-x-12 gap-y-3 text-sm/6"
      aria-label="Footer"
    >
      {links.map((link) => (
        <a href={link.url} class="text-gray-600 hover:text-gray-900 dark:text-gray-300 hover:dark:text-gray-50">{link.text}</a>
      ))}
    </nav>
    <div class="mt-16 flex justify-center gap-x-6 sm:gap-x-10">
      {socials.map((social) => (
        <a href={social.url} class="text-gray-600 hover:text-gray-800  dark:text-gray-400 hover:dark:text-gray-100">
          <span class="sr-only">{social.name}</span>
          <Icon icon={social.icon} class="size-6!" />
        </a>
      ))}
    </div>
    <p class="mt-10 text-center text-sm/6 text-gray-600 dark:text-gray-300">
      &copy; {copyrightYear} &#124; McInnes Design
    </p>
    <p class="text-center text-sm/6 text-gray-600 dark:text-gray-300">ABN: 32 205 159 015</p>
    <p class="mt-8 text-center">
      {/* theme toggle */}
    </p>
  </div>
</footer>
