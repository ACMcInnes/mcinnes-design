---
import '@fontsource-variable/inter';
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
const { title = "McInnes Design", description = "Welcome to McInnes Design, your one stop shop for all things Design & Development!" } = Astro.props;
---

<!doctype html>
<html lang="en" class="m-0 size-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description}>
  </head>
  <body class="m-0 size-full bg-neutral-50 dark:bg-slate-900 duration-200">
    <Header />
    <slot />
    <Footer />
    <script>
      import "../scripts/menutoggle.js";
    </script>
  </body>
</html>
