---
import Layout from "../layouts/Layout.astro";
import {
  faCode,
  faDisplay,
  faPenRuler,
  faDatabase,
  faStar,
  faGears,
  faLock,
  faRotate,
  faArrowUp,
} from "@fortawesome/free-solid-svg-icons";
import {
  faHtml5,
  faCss,
  faReact,
  faJs,
  faFigma,
	faSketch,
	faFontAwesome,
	faGithub,
	faGitlab,
	faNodeJs,
} from "@fortawesome/free-brands-svg-icons";
import Icon from "../components/Icon.astro";
import { Image } from "astro:assets";
import amThumbnail from "../assets/am_thumbnail.jpg";
import netoaddonThumbnail from "../assets/neto_addon_thumbnail.png";

const services = [
  {
    name: "Web Design / Development",
    description:
      "Looking to refresh your website, add new functionality, or start something brand new? From static HTML to a fancy JS framework, McInnes Design are here to help",
    icon: faCode,
  },
  {
    name: "Print & Digital Design",
    description:
      "Need a fancy email template, new in-store signage, how about a new website banner for that sale thats coming up?",
    icon: faDisplay,
  },
  {
    name: "UI/UX Prototypes",
    description:
      "Need to improve conversions or test a new page layout. Feel like your website is missing something? Get back to the drawing board and find out what you need to know",
    icon: faPenRuler,
  },
  {
    name: "Data Automation & Reporting",
    description:
      "Swimming in data but not sure what to do with it? Automate reports to consolidate your data, at least then it will look pretty even if you still don't understand it",
    icon: faDatabase,
  },
];

const projectFeatures = [
  {
    name: "Full Data Sync",
    description:
      "Easily access your Neto data and preview your content directly in the Dashboard",
    icon: faRotate,
  },
  {
    name: "Secure Connection",
    description:
      "The Neto Addon Example uses OAUth2.0 to securely access your data via the Neto API",
    icon: faLock,
  },
  {
    name: "Minimal Setup",
    description:
      "No long winded import/export feed required, once connected all your Neto data is available in app",
    icon: faGears,
  },
];

const timeline = [
  {
    name: "McInnes Design is born",
    description:
      "Offering freelance web and design services and bespoke projects, the team are keen to expand their services",
    date: "Jul 2019",
    dateTime: "2019-07",
  },
  {
    name: "Initial integration scoping",
    description:
      "Branching out into the ecommerce space, work begins scoping out a custom dashboard to sync all your platform data",
    date: "Jun 2023",
    dateTime: "2023-06",
  },
  {
    name: "Began building integration",
    description:
      "Neto Ecommerce is choosen as the initial platform integrator as its Australian based, work can now commence",
    date: "Sep 2023",
    dateTime: "2023-09",
  },
  {
    name: "Released beta",
    description:
      "The Neto Addon Example finishes initial development and enters beta, with more features to come",
    date: "Jan 2025",
    dateTime: "2025-01",
  },
];
---

<Layout title="McInnes Design | Home">
  {/* cta section */}
  <div class="">
    <div class="mx-auto max-w-7xl pt-12 pb-24 px-6 sm:pt-16 sm:pb-32 lg:px-8">
      <div
        class="bg-linear-to-br from-indigo-800 from-40% to-indigo-600 dark:from-indigo-900 dark:to-indigo-950 px-6 py-24 text-center shadow-2xl rounded-3xl px-8 sm:px-16"
      >
        <p
          class="text-base/7 font-semibold text-indigo-100 dark:text-indigo-300"
        >
          A boutique design and development agency
        </p>
        <h1
          class="mt-2 max-w-5xl text-5xl font-semibold tracking-tight text-gray-50 sm:text-7xl"
        >
          Your one stop shop for all things Design &amp; Development
        </h1>
        <p
          class="mt-8 text-lg font-medium text-pretty text-gray-100 dark:text-gray-200 sm:text-xl/8"
        >
          Proudly Australian owned and operated, based in Brisbane &#124;
          Meanjin
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/contact"
            class="rounded-md bg-white dark:bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-indigo-600 dark:text-gray-50 shadow-xs hover:bg-gray-100 dark:hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            What can we build for you?
          </a>
        </div>
      </div>
    </div>
  </div>
  {/* services */}
  <div class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div
        class="mx-auto grid max-w-2xl grid-cols-1 gap-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-5"
      >
        <div class="col-span-2">
          <h2
            class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-500"
          >
            Our Services
          </h2>
          <p
            class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 dark:text-gray-100 sm:text-5xl"
          >
            How can we help?
          </p>
          {
            /*
							<p class="mt-6 text-base/7 text-gray-600">
								Lorem ipsum, dolor sit amet consectetur adipisicing elit. Maiores impedit perferendis suscipit eaque, iste
								dolor cupiditate blanditiis ratione.
							</p>
						*/
          }
        </div>
        <dl class="col-span-3 grid grid-cols-1 gap-x-8 gap-y-16 sm:grid-cols-2">
          {
            services.map((service) => (
              <div>
                <dt class="text-base/7 font-semibold text-gray-900 dark:text-gray-50">
                  <div class="mb-6 flex size-10 items-center justify-center rounded-lg bg-indigo-600 dark:bg-indigo-500">
                    <Icon icon={service.icon} class="size-6! text-white" />
                  </div>
                  {service.name}
                </dt>
                <dd class="mt-1 text-base/7 text-gray-600 dark:text-gray-300">
                  {service.description}
                </dd>
              </div>
            ))
          }
        </dl>
      </div>
    </div>
  </div>
  {/* timeline */}
  <div class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <h2
        class="pb-6 text-2xl/8 font-semibold text-gray-900 dark:text-gray-100"
      >
        Our Journey
      </h2>
      <div
        class="mx-auto grid max-w-2xl grid-cols-1 gap-8 overflow-hidden lg:mx-0 lg:max-w-none lg:grid-cols-4"
      >
        {
          timeline.map((item) => (
            <div>
              <time
                datetime={item.dateTime}
                class="flex items-center text-sm/6 font-semibold text-indigo-600 dark:text-indigo-500"
              >
                <svg
                  viewBox="0 0 4 4"
                  aria-hidden="true"
                  class="mr-4 size-1 flex-none"
                >
                  <circle r={2} cx={2} cy={2} fill="currentColor" />
                </svg>
                {item.date}
                <div
                  aria-hidden="true"
                  class="absolute -ml-2 h-px w-screen -translate-x-full bg-gray-900/10 dark:bg-gray-100/10 sm:-ml-4 lg:static lg:-mr-6 lg:ml-8 lg:w-auto lg:flex-auto lg:translate-x-0"
                />
              </time>
              <p class="mt-6 text-lg/8 font-semibold tracking-tight text-gray-900 dark:text-gray-100">
                {item.name}
              </p>
              <p class="mt-1 text-base/7 text-gray-600 dark:text-gray-300">
                {item.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>
  </div>
  {/* projects */}
  <div class="overflow-hidden py-24 sm:py-32">
    <div class="mx-auto max-w-7xl md:px-6 lg:px-8">
      <div
        class="grid grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:grid-cols-2 lg:items-start"
      >
        <div class="px-6 lg:px-0 lg:pt-4 lg:pr-4">
          <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-lg">
            <h2
              class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-500"
            >
              Projects
            </h2>
            <p
              class="mt-2 text-4xl font-semibold tracking-tight text-pretty text-gray-900 dark:text-gray-100 sm:text-5xl"
            >
              Neto Addon Example
            </p>
            <p class="mt-6 text-lg/8 text-gray-600 dark:text-gray-300">
              An OAuth authenticated API application that generates a dashboard
              based off your Neto Ecommerce data.
            </p>
            <dl
              class="mt-10 max-w-xl space-y-8 text-base/7 text-gray-600 dark:text-gray-300 lg:max-w-none"
            >
              {
                projectFeatures.map((feature) => (
                  <div class="relative pl-9">
                    <dt class="inline font-semibold text-gray-900 dark:text-gray-100">
                      <Icon
                        icon={feature.icon}
                        class="absolute top-1 left-1 size-5! text-indigo-600 dark:text-indigo-500"
                      />
                      {feature.name}
                    </dt>{" "}
                    <dd class="inline">{feature.description}</dd>
                  </div>
                ))
              }
            </dl>

            <div
              class="mt-10 flex flex-col items-center justify-center gap-y-6 lg:justify-start"
            >
              <a
                href="//neto.mcinnes.design/"
                target="_blank"
                class="group text-sm/6 font-semibold text-indigo-500 dark:text-indigo-400"
              >
                View the Neto Addon Example <Icon icon={faArrowUp} class="align-super! ml-auto rotate-45 size-3! group-hover:animate-bounce" />
              </a>
              <a
                href="/projects"
                class="rounded-md bg-indigo-600 dark:bg-indigo-500 px-3.5 py-2.5 text-sm font-semibold text-white shadow-xs hover:bg-indigo-500 dark:hover:bg-indigo-400 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
              >
                View All Projects
              </a>
            </div>
          </div>
        </div>
        <div class="sm:px-6 lg:px-0">
          <div
            class="relative isolate overflow-hidden bg-indigo-500 px-6 pt-8 sm:mx-auto sm:max-w-2xl sm:rounded-3xl sm:pt-16 sm:pr-0 sm:pl-16 lg:mx-0 lg:max-w-none"
          >
            <div
              aria-hidden="true"
              class="absolute -inset-y-px -left-3 -z-10 w-full origin-bottom-left skew-x-[-30deg] bg-indigo-100 opacity-20 ring-1 ring-white ring-inset"
            >
            </div>
            <div class="mx-auto max-w-2xl sm:mx-0 sm:max-w-none">
              <Image
                src={netoaddonThumbnail}
                alt="Neto Addon Example Dashboard"
                class="-mb-12 w-[57rem] max-w-none rounded-tl-xl bg-gray-800 ring-1 ring-white/10"
              />
            </div>
            <div
              aria-hidden="true"
              class="pointer-events-none absolute inset-0 ring-1 ring-1 ring-gray-900/10 dark:ring-gray-100/10 ring-inset sm:rounded-3xl"
            >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {/* logo cloud */}
  <div class="py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:max-w-none">
        <h2 class="text-2xl/8 font-semibold text-gray-900 dark:text-gray-50">
          We utilise the latest web development standards for all our services
        </h2>
        <div
          class="mx-auto mt-10 grid grid-cols-4 items-start justify-items-center gap-x-8 gap-y-10 sm:grid-cols-6 sm:gap-x-10 lg:mx-0 lg:grid-cols-5"
        >
					<Icon icon={faHtml5} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
          <Icon icon={faCss} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
					<Icon icon={faJs} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
					<Icon icon={faReact} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
          <Icon icon={faFigma} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
					<Icon icon={faSketch} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
					<Icon icon={faFontAwesome} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
					<Icon icon={faGithub} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
					<Icon icon={faGitlab} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
					<Icon icon={faNodeJs} class="size-12! sm:size-24! text-gray-800 dark:text-gray-100" />
        </div>
      </div>
    </div>
  </div>
  {/* cta */}
  <div>
    <div class="mx-auto max-w-7xl py-24 sm:px-6 sm:py-32 lg:px-8">
      <div
        class="relative isolate overflow-hidden bg-gray-900 dark:bg-gray-800 px-6 py-24 text-center shadow-2xl sm:rounded-3xl sm:px-16"
      >
        <h2
          class="text-4xl font-semibold tracking-tight text-balance text-indigo-500 dark:text-indigo-400 sm:text-5xl"
        >
          Lets work together and build something amazing!
        </h2>
        <p
          class="mx-auto mt-6 max-w-xl text-lg/8 text-pretty text-gray-300 dark:text-gray-200"
        >
          <span class="align-top">*</span>Looks like we are full up at the
          moment and not taking on any new projects. But thanks for your
          interest
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6">
          <a
            href="/contact"
            class="rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-xs hover:bg-gray-100 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            Let&apos;s chat!
          </a>
          <a href="/projects" class="text-sm/6 font-semibold text-white">
            View Our Work <span aria-hidden="true">→</span>
          </a>
        </div>
        <svg
          viewBox="0 0 1024 1024"
          aria-hidden="true"
          class="absolute top-1/2 left-1/2 -z-10 size-[64rem] -translate-x-1/2 [mask-image:radial-gradient(closest-side,white,transparent)]"
        >
          <circle
            r={512}
            cx={512}
            cy={512}
            fill="url(#827591b1-ce8c-4110-b064-7cb85a0b1217)"
            fill-opacity="0.7"></circle>
          <defs>
            <radialGradient id="827591b1-ce8c-4110-b064-7cb85a0b1217">
              <stop stop-color="#7775D6"></stop>
              <stop offset={1} stop-color="#7c86ff"></stop>
            </radialGradient>
          </defs>
        </svg>
      </div>
    </div>
  </div>
  {/* reviews */}
  <section class="px-6 py-24 sm:py-32 lg:px-8">
    <figure class="mx-auto max-w-2xl">
      <p class="sr-only">5 out of 5 stars</p>
      <div class="flex gap-x-1 text-indigo-600 dark:text-indigo-500">
        <Icon icon={faStar} class="size-5! flex-none" />
        <Icon icon={faStar} class="size-5! flex-none" />
        <Icon icon={faStar} class="size-5! flex-none" />
        <Icon icon={faStar} class="size-5! flex-none" />
        <Icon icon={faStar} class="size-5! flex-none" />
      </div>
      <blockquote
        class="mt-10 text-xl/8 font-semibold tracking-tight text-gray-900 dark:text-gray-50 sm:text-2xl/9"
      >
        <p>
          &quot;Amazing agency to work for, the team is amazing and always
          produce top quality work&quot;
        </p>
      </blockquote>
      <figcaption class="mt-10 flex items-center gap-x-6">
        <Image
          src={amThumbnail}
          alt=""
          class="size-12 rounded-full bg-gray-50 dark:bg-gray-800"
        />
        <div class="text-sm/6">
          <div class="font-semibold text-gray-900 dark:text-gray-50">
            Andrew McInnes
          </div>
          <div class="mt-0.5 text-gray-600 dark:text-gray-300">
            Founder of McInnes Design
          </div>
        </div>
      </figcaption>
    </figure>
  </section>
</Layout>
