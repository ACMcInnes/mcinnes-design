---
import Layout from "../layouts/Layout.astro";
import { Image } from 'astro:assets';
import amThumbnail from '../assets/am_thumbnail.jpg';
---

<Layout title="McInnes Design | Home">
  <div class="bg-white px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <p class="text-base/7 font-semibold text-indigo-600">
        A boutique design and development agency
      </p>
      <h1
        class="mt-2 text-5xl font-semibold tracking-tight text-gray-900 sm:text-7xl"
      >
        McInnes Design
      </h1>
      <p
        class="mt-8 text-lg font-medium text-pretty text-gray-500 sm:text-xl/8"
      >
        Proudly Australian owned and operated, based in Brisbane &#124; Meanjin
      </p>
    </div>
  </div>
  {/* reviews */}
