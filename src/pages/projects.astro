---
import Layout from "../layouts/Layout.astro";

import { faHashtag } from "@fortawesome/free-solid-svg-icons";
import Icon from "../components/Icon.astro";

import { Image } from "astro:assets";
import addonDemoProfile from "../assets/addon_demo_profile.jpg";
import addonLoginPage from "../assets/addon_login_page.jpg";
import addonDocumentation from "../assets/addon_documentation.jpg";
import addonProductSync from "../assets/addon_product_sync.jpg";
import netoGlobalLogin from "../assets/neto_global_login.jpg";

const features = [
  {
    name: "Connect and Go",
    description:
      "Connect your Neto Ecommerce webstore in seconds, don't have a Neto store - no worries, you can still check out our App Demo",
    imageSrc: addonLoginPage,
    imageAlt: "Login with just your Neto webstore URL",
  },
  {
    name: "Your data, but different",
    description:
      "View your Neto data, including products, customers, content, and much more from your custom dashboard.",
    imageSrc: addonDemoProfile,
    imageAlt:
      "Your profile includes key webstore fields as well as your connection status.",
  },
];

const specifications = [
  {
    name: "Automatic",
    description:
      "No more manual import/export feeds, or costly setup times. Thanks to the Neto API your data is available as soon as you launch the app.",
  },
  {
    name: "Secure",
    description:
      "Authorise the application with your existing Neto global login, no additional account setup required & your connected is secured by Neto.",
  },
  {
    name: "Fast",
    description:
      "We sync your data when you need it, so you will always be looking at the most up to date content.",
  },
  {
    name: "Fully Documented",
    description:
      "Check out our documentation for anything related to setting up the app",
  },
];
---

<Layout title="McInnes Design | Projects">
  <div class="px-6 pt-24 pb-6 sm:pt-32 sm:pb-8 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <p class="text-base/7 font-semibold text-indigo-600 dark:text-indigo-500">
        McInnes Design
      </p>
      <h1
        class="mt-2 text-5xl font-semibold tracking-tight text-gray-900 dark:text-gray-50 sm:text-7xl"
      >
        Projects
      </h1>
    </div>
  </div>

  <div id="neto-addon-example">
    <div
      class="mx-auto max-w-2xl px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:px-8"
    >
      <div class="mx-auto max-w-3xl text-center">
        <a href="#neto-addon-example" class="group">
          <h2
            class="text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-50 sm:text-4xl"
          >
            Neto Addon Example
            <Icon icon={faHashtag} class="align-top! invisible group-hover:visible size-6! text-gray-400 dark:text-gray-300" />
          </h2>
        </a>
        <p class="mt-4 text-gray-500 dark:text-gray-300">
          A proof of concept for an Ecommerce Platform integration.
        </p>
      </div>

      <div class="mt-16 space-y-16">
        {
          features.map((feature, featureIdx) => (
            <div class="flex flex-col-reverse lg:grid lg:grid-cols-12 lg:items-center lg:gap-x-8">
              <div
                class={`${featureIdx % 2 === 0 ? "lg:col-start-1" : "lg:col-start-8 xl:col-start-9"} mt-6 lg:col-span-5 lg:row-start-1 lg:mt-0 xl:col-span-4`}
              >
                <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50">
                  {feature.name}
                </h3>
                <p class="mt-2 text-sm text-gray-500 dark:text-gray-300">
                  {feature.description}
                </p>
              </div>
              <div
                class={`${featureIdx % 2 === 0 ? "lg:col-start-6 xl:col-start-5" : "lg:col-start-1"} flex-auto lg:col-span-7 lg:row-start-1 xl:col-span-8`}
              >
                <Image
                  alt={feature.imageAlt}
                  src={feature.imageSrc}
                  class="aspect-5/2 w-full rounded-lg ring-1 ring-gray-900/10 dark:ring-gray-100/10 bg-gray-100 object-cover"
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div>
    <div
      class="mx-auto max-w-2xl px-4 py-24 sm:px-6 sm:py-32 lg:max-w-7xl lg:px-8"
    >
      <div
        class="grid grid-cols-1 items-center gap-x-8 gap-y-16 lg:grid-cols-2"
      >
        <div>
          <div class="border-b border-gray-200 pb-10">
            <h2 class="font-medium text-gray-500 dark:text-gray-300">
              Integration
            </h2>
            <p
              class="mt-2 text-3xl font-bold tracking-tight text-gray-900 dark:text-gray-50 sm:text-4xl"
            >
              Specifications
            </p>
          </div>

          <dl class="mt-10 space-y-10">
            {
              specifications.map((specification) => (
                <div>
                  <dt class="text-sm font-medium text-gray-900 dark:text-gray-50">
                    {specification.name}
                  </dt>
                  <dd class="mt-3 text-sm text-gray-500 dark:text-gray-300">
                    {specification.description}
                  </dd>
                </div>
              ))
            }
          </dl>
        </div>

        <div>
          <Image
            alt="Black kettle with long pour spot and angled body on marble counter next to coffee mug and pour-over system."
            src={addonDocumentation}
            class="aspect-square w-full rounded-lg ring-1 ring-gray-900/10 dark:ring-gray-100/10 bg-gray-100 object-cover"
          />
          <div
            class="mt-4 grid grid-cols-2 gap-4 sm:mt-6 sm:gap-6 lg:mt-8 lg:gap-8"
          >
            <Image
              alt="Detail of temperature setting button on kettle bass with digital degree readout."
              src={addonProductSync}
              class="aspect-square w-full rounded-lg ring-1 ring-gray-900/10 dark:ring-gray-100/10 bg-gray-100 object-cover"
            />
            <Image
              alt="Kettle spout pouring boiling water into coffee grounds in pour-over mug."
              src={netoGlobalLogin}
              class="aspect-square w-full rounded-lg ring-1 ring-gray-900/10 dark:ring-gray-100/10 bg-gray-100 object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
